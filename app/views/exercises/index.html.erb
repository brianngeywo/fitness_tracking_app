<p id="notice"><%= notice %></p>

<h1><%= @workout.name %> Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Workout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.sets %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.workout_id %></td>
        <td><%= link_to 'Show', workout_exercise_path(@workout, exercise) %></td>
        <td><%= link_to 'Edit', edit_workout_exercise_path(@workout, exercise) %></td>
        <td><%= link_to 'Destroy', [@workout, exercise], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise', new_workout_exercise_path(@workout) %>
<%= link_to 'Back', workout_path(@workout) %>